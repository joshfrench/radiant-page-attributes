#add-page-attribute-popup.popup{:style => "display: none"}
  #page-attribute-busy.busy{:style => "display: none"}= image 'spinner.gif'
  %h3 Add Attribute
  - form_remote_tag(:url => admin_add_attribute_url, :update => "extended-metadata", :position => :bottom, :loading => 'page-attribute_loading()', :complete => 'page-attribute_added()', :condition => 'valid_page-attribute_name()') do
    %div
      = hidden_field_tag 'index', @index, :id => 'page-attribute-index-field'
      = text_field_tag "attribute[name]", "", :id => 'page-attribute-name-field', :maxlength => 100
      = select_tag "attribute[class_name]", options_for_select(PageAttribute.list_subclasses.map {|c| [c.display_name, c.name]})
      = submit_tag "Add", :id => 'add-page-attribute-button'
      %p
        = link_to_function 'Close', "$(this).up('.popup').hide()", :class => 'close-link'